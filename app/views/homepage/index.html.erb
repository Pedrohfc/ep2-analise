<h1>Selecione a data</h1>

<%= form_tag("/result", method: "get") do %>
  <%= label_tag(:month_begin, "Mes inicial:") %>
  <%= date_field_tag(:month_begin) %>
  <%= label_tag(:year_begin, "Ano inicial:") %>
  <%= date_field_tag(:year_begin) %>
  <%= label_tag(:month_end, "Mes final:") %>
  <%= date_field_tag(:month_end) %>
  <%= label_tag(:year_end, "Ano de final:") %>
  <%= date_field_tag(:year_end) %>
  <%= submit_tag("buscar") %>
<% end %>
